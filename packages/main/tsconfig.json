{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "#common": ["../common/src/index"],
      "/@/*": ["./src/*"]
    },
    "importsNotUsedAsValues": "error",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "../../types/**/*.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
